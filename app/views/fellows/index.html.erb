<!-- Current Students
================================================== -->
<section class="section-content" id = "current-fellows">
  <div class="container">
    <div class="page-header text-center">
      <% if @current_students.size > 0 %>
      <h2><%=@current_year %> Fellows</h2>
    </div>
      <p class = "col-md-12">Lorem ipsum dolor sit amet, aliquip feugait ius in, animal suscipit liberavisse an sea. Vis iudico possit referrentur ne.Ancillae scribentur vis et. Modus dicta te qui.
      Elitr detracto est ei. Eirmod mandamus ea qui, nam in dictas habemus. Ei his congue aeterno fuisset. Te his melius euismod abhorreant. Quem tale vis ea, quo consul adipisci honestatis in. At cum vero accommodare.</p>
    <div class="row demo-3">
      <div class="grid cs-style-1" data-isotope-options='{ "columnWidth": 200, "itemSelector": ".portfolio-item" }'>
        <% @current_students.each do |fellow| %>
        <%unless fellow.display == false%>
        <div class="col-sm-6 col-md-3 portfolio-item">
          <figure>     
            <!-- Thumb Info -->
            <div class="info">
              <h3><%=fellow.name%></h3>
              <span><%=fellow.company_name%></span>
            </div>   
            <!-- Thumbnail -->
            <%=image_tag fellow.profile_pic%>
            <!-- Thumb links -->
            <figcaption>
              <br>


              <a href="fellows/<%=fellow.slug%>" class="link tooltips" data-toggle="tooltip" data-placement="bottom" title="Open Website">
                <i class="fa fa-external-link"></i>
              </a>
              <br>
            </figcaption>
          </figure>
        </div>
        <%end%>
        <%end%>
        <% else %>
        <h2> New Fellows coming soon!</h2>
        <%end%>
      </div>
    </div>
  </div>
</section>

<!-- Alumnae
================================================== -->
<section class="section-content" id="alumnae">
  <div class="container">
    <div class="page-header text-center">
      <h2>Alums</h2>
    </div>


    <div id="filters" class="button-group text-center">
      <button data-filter-value=".fellow" class="active">show all alums</button>

      <%@years.each do |year|%>
        <button data-filter-value=".<%=year%>"><%=year%></button>
        <%end%>
    </div>
    <div class="row demo-3">
      <div  id="portfolio" class="grid cs-style-1" data-isotope-options='{ "columnWidth": 200, "itemSelector": ".portfolio-item" }'>
        <%@years.each do |button_year| %>
          <div class="col-md-12 portfolio-item <%=button_year%> text"><p class="text-center">
            <%@text = Textblurb.select{|text| text.year_string == button_year.to_s}%>
            <p><%=@text.first.body%>  You can become a Fellow too! Apply at <a href="https://code2040.cerebrotalent.com/">apply.code2040.org.</a></p>
          </div>
          <%end%>
        <br>

        <% @years.each do |button_year| %>
          <% @year_alumnae = Fellow.select{|fellow| fellow.year == button_year}.sort_by{|fellow| fellow.name}%>
          <% @year_alumnae.each do |fellow| %>
            <%if fellow.year == button_year%>
              <div class="col-sm-6 col-md-3 portfolio-item <%=button_year%> fellow">
            <%end%>
            <figure>     
              <!-- Thumb Info -->
              <div class="info">
                <h3><%=fellow.name%></h3>
                <span><%=fellow.title%></span>
              </div>   
              <!-- Thumbnail -->
              <%=image_tag fellow.profile_pic%>
              <!-- Thumb links -->
            <figcaption>
              <a href="fellows/<%=fellow.slug%>" class="link tooltips" data-toggle="tooltip" data-placement="bottom" title="Open Website">
                <i class="fa fa-external-link"></i>
              </a>
            </figcaption>
            </figure>
              </div>
        <%end%>
      <%end%>
      </div>
    </div>
  </div>
</section>

