<!-- Current Students
================================================== -->
<section class="section-content" id = "current-fellows">

  <div class="page-header text-center">
    <h2><%=@current_year %> Fellows</h2>
  </div>

  <div class="container">
    <div class="row demo-3">
      <div class="grid cs-style-1" data-isotope-options='{ "columnWidth": 200, "itemSelector": ".portfolio-item" }'>
        <% @current_students.each do |fellow| %>
        <div class="col-sm-6 col-md-4 portfolio-item">
          <figure>     
            <!-- Thumb Info -->
            <div class="info">
              <h3><%=fellow.name%></h3>
              <span><%=fellow.title%></span>
            </div>   
            <!-- Thumbnail -->
            <%=image_tag fellow.profile_pic%>
            <!-- Thumb links -->
            <figcaption>

              <a href="assets/images/<%=fellow.profile_pic%>" class="preview tooltips popup-gallery" data-toggle="tooltip" data-placement="bottom" title="Preview">
                <i class="fa fa-plus"></i>
              </a>
              <a href="fellow/<%=fellow.slug%>" class="link tooltips" data-toggle="tooltip" data-placement="bottom" title="Open Website">
                <i class="fa fa-external-link"></i>
              </a>

            </figcaption>
          </figure>
        </div>
        <%end%>
      </div>
    </div>
</section>

<!-- Alumnae
================================================== -->
<section class="section-content" id="alumnae">
  <div class="page-header text-center">
    <h2>Alumnae</h2>
  </div>

  <div class="container">
    <div id="filters" class="button-group text-center">
      <button data-filter-value="*" class="active">show all alumnae</button>
      <button data-filter-value=".2012">2012</button>
      <button data-filter-value=".2013">2013</button>
    </div>
    <div class="row demo-3">
      <div  id="portfolio" class="grid cs-style-1" data-isotope-options='{ "columnWidth": 200, "itemSelector": ".portfolio-item" }'>
        <% @alumnae.each do |fellow| %>
          <%if fellow.year == 2012%>
        <div class="col-sm-6 col-md-4 portfolio-item 2012">
          <%elsif fellow.year == 2013%>
        <div class="col-sm-6 col-md-4 portfolio-item 2013">
          <%end%>
          <figure>     
            <!-- Thumb Info -->
            <div class="info">
              <h3><%=fellow.name%></h3>
              <span><%=fellow.title%></span>
            </div>   
            <!-- Thumbnail -->
            <%=image_tag fellow.profile_pic%>
            <!-- Thumb links -->
            <figcaption>

              <a href="assets/images/<%=fellow.profile_pic%>" class="preview tooltips popup-gallery" data-toggle="tooltip" data-placement="bottom" title="Preview">
                <i class="fa fa-plus"></i>
              </a>
              <a href="fellow/<%=fellow.slug%>" class="link tooltips" data-toggle="tooltip" data-placement="bottom" title="Open Website">
                <i class="fa fa-external-link"></i>
              </a>

            </figcaption>
          </figure>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</section>


<!-- Call to Action
================================================== -->
<section class="cta text-center">

  <div class="container">
    
    <div class="row">
      <div class="col-lg-12">
        <h2>Want to be a 2015 Fellow? <span class="highlight">Apply Now!</span></h2>
        <a href="https://code2040.cerebrotalent.com/"><button class="btn" url= type="button" role="button">Apply</button></a>
        <div class='contact-form'>
          <form name="sentMessage" id="contactForm"  novalidate>
            <div class='name'>
              <input class='form-control first' placeholder='First Name' type='text' id="first_name" autofocus required data-validation-required-message="Please enter your first name">
              <input class='last' placeholder='Last Name' type='text' id="last_name" required data-validation-required-message="Please enter your last name">
            </div>
            <div class='contact'>
              <input class='form-control email' placeholder='E-mail Address' type='text' id="email" required data-validation-required-message="Please enter your email">
            </div>
            <div class='message'>
              <textarea class="form-control" placeholder='Your message' id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
            </div>
            <div id="success"> </div> <!-- For success/fail messages -->
            <footer class="submit-button">
              <button type="submit">Send your message</button>
            </footer>
          </form>
          
        </div>
      </div>
    </div>

  </div>
</section>


